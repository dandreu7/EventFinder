<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Finder | UNC Charlotte</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Global CSS -->
    <link rel="stylesheet" href="/CSS/styles.css" />
    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="/CSS/index.css" />
    <style>
      /* Make the carousel images square */
      .carousel-item img {
        height: 550px; /* Set a fixed height */
        width: 400px; /* Make the image square-shaped */
        object-fit: cover; /* Prevent image distortion */
      }

      /* Additional styling for responsiveness */
      @media (max-width: 768px) {
        .carousel-item img {
          height: 300px;
          width: 300px;
        }
      }

      @media (max-width: 576px) {
        .carousel-item img {
          height: 200px;
          width: 200px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Include Header Partial -->
    <%- include('partials/header') %>

    <!-- Hero Section with Pictures of UNC Charlotte and Event Buildings -->
    <section class="hero-section">
      <div class="container">
        <div id="campusCarousel" class="carousel slide" data-ride="carousel">
          <!-- Carousel Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#campusCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#campusCarousel" data-slide-to="1"></li>
            <li data-target="#campusCarousel" data-slide-to="2"></li>
            <li data-target="#campusCarousel" data-slide-to="3"></li>
          </ol>

          <!-- Carousel Images -->
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                src="/images/uncc_urec.jpg"
                class="d-block w-100 img-fluid"
                alt="UNC Charlotte URec Festival"
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>Welcome to UNC Charlotte</h5>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="/images/pnc_pavillion.jpg"
                class="d-block w-100 img-fluid"
                alt="PNC Music Pavilion"
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>PNC Music Pavilion Events</h5>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="/images/nfl_stadium.jpg"
                class="d-block w-100 img-fluid"
                alt="Carolina Panthers Stadium"
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>Carolina Panthers Stadium Events</h5>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="/images/uncc_latinX.jpg"
                class="d-block w-100 img-fluid"
                alt="UNCC LatinX"
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>UNCC LatinX Events</h5>
              </div>
            </div>
          </div>

          <!-- Carousel Controls -->
          <a
            class="carousel-control-prev"
            href="#campusCarousel"
            role="button"
            data-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a
            class="carousel-control-next"
            href="#campusCarousel"
            role="button"
            data-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Upcoming Events Section -->
    <section class="upcoming-events container mt-5">
      <h2>Upcoming Events</h2>
      <div class="card-deck">
        <div class="card">
          <img src="../../images/event1.jpeg" class="card-img-top img-fluid" alt="Event 1" />
          <div class="card-body">
            <h5 class="card-title">Campus Concert</h5>
            <p class="card-text">
              Join us for an unforgettable concert at the Student Union!
            </p>
            <a href="#" class="btn btn-primary">RSVP</a>
          </div>
        </div>
        <div class="card">
          <img src="/images/event2.jpeg" class="card-img-top img-fluid" alt="Event 2" />
          <div class="card-body">
            <h5 class="card-title">Food Truck Fest</h5>
            <p class="card-text">
              Come and enjoy local food trucks on the quad.
            </p>
            <a href="#" class="btn btn-primary">RSVP</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>

    <!-- Full jQuery version (required for Bootstrap Carousel) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="/JS/index.js"></script>
  </body>
</html>
