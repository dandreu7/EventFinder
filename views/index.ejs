<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Finder | UNC Charlotte</title>

    <!-- FontAwesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Global CSS -->
    <link rel="stylesheet" href="/CSS/styles.css" />
    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="/CSS/index.css" />
  </head>
  <body>
    <!-- Include Header Partial -->
    <%- include('partials/header') %>

    <!-- Include Sidebar Partial -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
      <div class="hero-content">
        <!-- Hero Section with Pictures of UNC Charlotte and Event Buildings -->
        <section class="hero-section">
          <div class="container">
            <div id="campusCarousel" class="carousel slide" data-ride="carousel">
              <!-- Carousel Indicators -->
              <ol class="carousel-indicators">
                <li
                  data-target="#campusCarousel"
                  data-slide-to="0"
                  class="active"
                ></li>
                <li data-target="#campusCarousel" data-slide-to="1"></li>
                <li data-target="#campusCarousel" data-slide-to="2"></li>
                <li data-target="#campusCarousel" data-slide-to="3"></li>
              </ol>

              <!-- Carousel Images -->
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="/images/uncc_urec.jpg"
                    class="d-block w-100 img-fluid"
                    alt="UNC Charlotte URec Festival"
                  />
                  <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to UNC Charlotte</h5>
                  </div>
                </div>
                <div class="carousel-item">
                  <img
                    src="/images/pnc_pavillion.jpg"
                    class="d-block w-100 img-fluid"
                    alt="PNC Music Pavilion"
                  />
                  <div class="carousel-caption d-none d-md-block">
                    <h5>PNC Music Pavilion Events</h5>
                  </div>
                </div>
                <div class="carousel-item">
                  <img
                    src="/images/nfl_stadium.jpg"
                    class="d-block w-100 img-fluid"
                    alt="Carolina Panthers Stadium"
                  />
                  <div class="carousel-caption d-none d-md-block">
                    <h5>Carolina Panthers Stadium Events</h5>
                  </div>
                </div>
                <div class="carousel-item">
                  <img
                    src="/images/uncc_latinX.jpg"
                    class="d-block w-100 img-fluid"
                    alt="UNCC LatinX"
                  />
                  <div class="carousel-caption d-none d-md-block">
                    <h5>UNCC LatinX Events</h5>
                  </div>
                </div>
              </div>

              <!-- Carousel Controls -->
              <a
                class="carousel-control-prev"
                href="#campusCarousel"
                role="button"
                data-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Previous</span>
              </a>
              <a
                class="carousel-control-next"
                href="#campusCarousel"
                role="button"
                data-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </section>

      <!-- Upcoming Events Section -->
      <section class="upcoming-events container mt-5">
        <h2 class="text-center">Upcoming Events</h2>
        <div class="row">
          <!-- Dynamically render upcoming events -->
          <% if (upcomingEvents && upcomingEvents.length > 0) { %> <%
          upcomingEvents.forEach(function(event) { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img
                src="<%= event.imagePath %>"
                class="card-img-top img-fluid"
                alt="<%= event.title %>"
              />
              <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <p class="card-text"><%= event.description %></p>
                <p class="card-text">
                  <strong>Date:</strong> <%= (event.date).toUTCString() %>
                </p>
                <p class="card-text">
                  <strong>Location:</strong> <%= event.location %>
                </p>
                <a href="/events/<%= event.id %>" class="btn btn-primary"
                  >View Event</a
                >
              </div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-center">No upcoming events.</p>
          <% } %>
        </div>
      </section>

      <!-- Include Footer Partial -->
      <%- include('partials/footer') %>
    </div>
  </div>

    <!-- Full jQuery version (required for Bootstrap Carousel) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="/JS/index.js"></script>
  </body>
</html>
