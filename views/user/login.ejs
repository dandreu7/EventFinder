<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <!-- FontAwesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Global CSS -->
    <link rel="stylesheet" href="/CSS/styles.css" />
    <!-- Login-specific CSS -->
    <link rel="stylesheet" href="/CSS/login.css" />
  </head>
  <body>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Global CSS -->
    <link rel="stylesheet" href="/CSS/styles.css">
    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="/CSS/login.css">

</head>
<body>

    <!-- Include Header Partial -->
    <%- include('../partials/header') %>
    <!-- Include Sidebar Partial -->
    <%- include('../partials/sidebar') %>

    <div class="main-content d-flex justify-content-center align-items-center">
      <div class="login-box">
        <h1 class="text-center">Login</h1>
        <form action="/login" method="POST" class="mt-4 w-100">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
    <!-- Main content area -->
    <div class="content container d-flex flex-column justify-content-center align-items-center mt-5">
        <h1>Login</h1>
        <form action="/login" method="POST" class="w-50 mt-4">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Password">
            </div>
            <button type="submit" class="btn btn-block btn-primary">Login</button>
        </form>

        <!-- Create Account Link -->
        <div class="text-center mt-3">
          <p>Don't have an account? <a href="/signup">Create an Account</a></p>
        </div>
      </div>
    </div>

    <!-- Include Footer Partial -->
    <%- include('../partials/footer') %>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
